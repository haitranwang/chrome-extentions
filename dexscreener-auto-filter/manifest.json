{
  "manifest_version": 3,
  "name": "DexScreener Auto Filter",
  "version": "1.1.0",
  "description": "DexScreener extension: Auto-open token tabs, manage favorite filters, and track filter usage across multiple blockchains (Solana, BSC, Base, Ethereum, etc.)",
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://*.dexscreener.com/*",
    "https://api.dexscreener.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://dexscreener.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icon16.png", "icon48.png", "icon128.png"],
      "matches": ["https://*.dexscreener.com/*"]
    }
  ]
}

