{
  "manifest_version": 3,
  "name": "GMGN Auto Filter",
  "version": "1.0.0",
  "description": "GMGN extension: Auto-open token tabs with custom price change filters, highlight matching tokens, and track opened tokens across multiple blockchains",
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://*.gmgn.ai/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://gmgn.ai/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icon16.png", "icon48.png", "icon128.png"],
      "matches": ["https://*.gmgn.ai/*"]
    }
  ]
}

